<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/spinner_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="Select a Service Below"
        android:textSize="22dp" />


    <Spinner
        android:id="@+id/services_spinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:entries="@array/medical_services"
        android:spinnerMode="dropdown"
        android:prompt="@string/medical_spinner_prompt" />


    <Spinner
        android:id="@+id/borough_spinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:entries="@array/borough_list"
        android:spinnerMode="dropdown"
        android:prompt="@string/borough_prompt" />


    <Button
        android:id="@+id/search_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:background="@color/blue"
        android:gravity="center"
        android:text="SEARCH"
        android:textColor="@color/white" />


</LinearLayout>



