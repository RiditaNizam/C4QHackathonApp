<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_vertical_margin">

        <View
            android:id="@+id/divider"
            android:layout_width="385dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:background="@color/dividerColor" />


    <TextView
        android:id="@+id/urg_facility_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Facility Name"
        android:layout_below="@id/divider"
        android:paddingTop="26dp"
        android:paddingBottom="2dp" />

    <TextView
        android:id="@+id/urg_borough"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Queens"
        android:textStyle="bold"
        android:paddingBottom="3dp"
        android:layout_below="@id/urg_facility_name" />

    <TextView
        android:id="@+id/urg_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="16 E 24th Street"
        android:paddingBottom="3dp"
        android:layout_below="@id/urg_borough" />

    <TextView
        android:id="@+id/urg_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="999-9999"
        android:layout_below="@id/urg_address" />


    </RelativeLayout>

</RelativeLayout>