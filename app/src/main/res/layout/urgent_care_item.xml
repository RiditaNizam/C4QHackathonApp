<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@color/blue"
    android:padding="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/urg_facility_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Facility Name"
        android:paddingBottom="4dp"
        />

    <TextView
        android:id="@+id/urg_borough"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Queens"
        android:paddingBottom="4dp"
        android:layout_below="@id/urg_facility_name"
        />

    <TextView
        android:id="@+id/urg_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="16 E 24th Street"
        android:paddingBottom="4dp"
        android:layout_below="@id/urg_borough"
        />

    <TextView
        android:id="@+id/urg_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="999-9999"
        android:paddingBottom="4dp"
        android:layout_below="@id/urg_address"
        />





</RelativeLayout>